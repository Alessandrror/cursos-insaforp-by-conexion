Algoritmo TresNumerosDistintos
	Definir a Como Entero;
	Definir b Como Entero;
	Definir c Como Entero;
	Leer a;
	Leer b;
	Leer c;
	
	Escribir "Los 2 numeros siguientes al segundo numero son:";
	
	Para i = 1 Hasta 2;
		Escribir  b + i;
	FinPara
	
	Escribir "La potencia a la cuarta del tercer numero es:";
	
	Escribir c^4;
	
	Escribir "La multiplicacion del primer numero por el tercero por el valor de pi:";
	
	Escribir (a*c*PI);
	
FinAlgoritmo
